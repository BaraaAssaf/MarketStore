@model IEnumerable<MarketStore.Models.Product>
@{
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
    List<int> productid = new List<int>();
}
    
  <link href="~/assets1/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
   <link href="~/assets1/css/style.css" rel="stylesheet">
              <!-- ======= Store Section ======= -->
    <section id="portfolio" class="portfolio">
      <div class="container">

        <div class="section-title">
          <h2>Store</h2>
        </div>
      <form asp-action="Cart"> 
             <button type="submit" class="btn btn-primary mb-2">
                Cart <span class="badge bg-white text-primary">@ViewBag.cart</span>
            </button>
      </form>

        <div class="row">
          <div class="col-lg-12">
            <ul id="portfolio-flters">  

   <form asp-action="Product" method="Post">
                <input  type="text" name="Search" />   
                <input hidden type="text" name="name" value="@ViewBag.id" /> 
                <button type="submit">Search</button>
  </form>

              </ul>
          </div>
        </div>


        <div class="row portfolio-container">
  
 @foreach(var item in Model)
 {
          <div class="col-lg-4 col-md-6 portfolio-item wow fadeInUp">
            <div class="portfolio-wrap">

              <figure>
                <img src=@Url.Content("~/Images/" + item.Imagepath) class="img-fluid" alt="">
              </figure>
             
              <div class="portfolio-info">
                <h4><a href="portfolio-details.html">@item.ProductName</a></h4>
                <h4> price : @item.SellingPrice JD</h4>         
              </div>

              <form  asp-action="AddCart">
                  <input type="number" name="Quntity" >
                  <input hidden type="number" name="productid" value="@item.Id">
                <button class="btn btn-primary" type="submit">Add To Cart</button>
             </form>
            </div>
          </div>
}       
      </div>
      </div>
    </section><!-- End Store Section -->

    
  <script src="~/assets1/vendor/purecounter/purecounter.js"></script>
  <script src="~/assets1/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets1/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/assets1/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="~/assets1/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/assets1/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="~/assets1/vendor/php-email-form/validate.js"></script>
   <script src="~/assets1/js/main.js"></script>
     