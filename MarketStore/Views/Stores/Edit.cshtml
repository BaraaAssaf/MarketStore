@model MarketStore.Models.Store

@{
    ViewData["Title"] = "Edit";
      Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}



<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StoreName" class="control-label"></label>
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthlyFee" class="control-label"></label>
                <input asp-for="MonthlyFee" class="form-control" />
                <span asp-validation-for="MonthlyFee" class="text-danger"></span>
            </div>
               <div>
                      <label hidden asp-for="Imagepath" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
                        <input hidden asp-for="Imagepath" type="text" class="form-control">
                        <span hidden asp-validation-for="Imagepath" class="text-danger"></span>
               </div>
         <div class="form-group">
 <label  asp-for="ImageFile" class="control-label"></label>
 <input asp-for="ImageFile" class="form-control" />
 <span asp-validation-for="ImageFile" class="text-danger"></span>
 </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-top:20px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary" style="margin-top:20px;">Back to store List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
